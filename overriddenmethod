class A {
    void show() { System.out.println("Show in A"); }
}
class B extends A {
    void show() { System.out.println("Show in B"); }
}
class C extends B {
    void show() { System.out.println("Show in C"); }
}
public class MainClass {
    public static void main(String[] args) {
        A ref; 
        ref = new B(); 
        ref.show(); 
 ref = new C(); 
        ref.show();
    }
}
